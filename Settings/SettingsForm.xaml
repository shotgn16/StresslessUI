<Window x:Class="StresslessUI.SettingsForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StresslessUI"
        mc:Ignorable="d"
        Title="Settings" Height="220" Width="700">
    <Grid Height="220" VerticalAlignment="Top" RenderTransformOrigin="0.505,0.467" >
        <Label Content="Settings" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="25" Margin="15,18,0,0"/>
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Host IP Address/Host" VerticalAlignment="Top" Margin="15,65,0,0"/>
        <TextBox x:Name="tbx_hostAddress" HorizontalAlignment="Left" Margin="15,85,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="133"/>
        <Button x:Name="btn_save" Content="Save &amp; Close" HorizontalAlignment="Left" Margin="15,114,0,0" VerticalAlignment="Top" Height="25" Width="99" Click="btn_save_Click"/>
        <TextBox x:Name="tbx_logs" HorizontalAlignment="Left" Height="132" Margin="185,18,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="475"/>
        <Button Content="Load Logs" HorizontalAlignment="Left" Margin="185,155,0,0" VerticalAlignment="Top" Width="65" Click="Button_Click"/>
    </Grid>
</Window>
